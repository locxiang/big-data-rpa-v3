{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "big-data-rpa-v3",
  "version": "0.7.0",
  "identifier": "com.big-data-rpa-v3",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "数字重庆业务数据巡查自动化系统",
        "width": 1200,
        "height": 800,
        "resizable": false,
        "center": true,
        "minimizable": true,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "allowDowngrades": false,
      "wix": {
        "language": "zh-CN",
        "template": "main.wxs"
      },
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": null
    },
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "entitlements.plist"
    },
    "resources": [
      "resources/*"
    ],
    "externalBin": [],
    "copyright": "Copyright © 2024 数字重庆业务数据巡查自动化系统",
    "category": "DeveloperTool",
    "shortDescription": "数字重庆业务数据巡查自动化系统",
    "longDescription": "基于 Tauri 的数字重庆业务数据巡查自动化系统，提供网络包捕获和数据分析功能。"
  }
}
