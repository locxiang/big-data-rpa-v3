{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "big-data-rpa-v3",
  "version": "0.1.0",
  "identifier": "com.big-data-rpa-v3",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "数字重庆业务数据巡查自动化系统",
        "width": 1200,
        "height": 800,
        "resizable": false,
        "center": true,
        "minimizable": true,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "entitlements.plist"
    }
  }
}
